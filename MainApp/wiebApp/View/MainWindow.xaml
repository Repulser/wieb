<Window x:Class="wiebApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wiebApp"
        mc:Ignorable="d"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Height="300" Width="300">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderMainGrid">
            
            <Rectangle />
                        
            <Canvas Grid.Row="0">
                
                <Button x:Name="CloseButton" Width="35" Height="35" Canvas.Right="0">
                    <Image Width="16" Height="16" />
                </Button>

                <Button x:Name="MinimizeButton" Width="35" Height="35" Canvas.Right="35">
                    <Image Width="16" Height="16" />
                </Button>

                <Button x:Name="BackButton" Width="35" Height="35" Canvas.Left="0">
                    <Image Width="16" Height="16" />
                </Button>

            </Canvas>
        </Grid>

    </Grid>
</Window>