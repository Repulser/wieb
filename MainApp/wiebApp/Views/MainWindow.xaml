<Window x:Class="wieb.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wieb.Views"
        xmlns:sharedResources="clr-namespace:wieb.SharedResources"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:viewmodels="clr-namespace:wieb.ViewModels"
        mc:Ignorable="d"
        Height="300" Width="300"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <sharedResources:AppSettings x:Key="AppSettings" />
        <viewmodels:ClickAnimationConverter x:Key="ClickAnimationConverter" />
        <!--S T Y L E S-->
        <!-- HeaderButtons -->
        <Style x:Key="HeaderButtons" TargetType="{x:Type Button}">
            <!--Styles.Setters-->
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Tag">
                    <Setter.Value>
                        <system:Double>-1</system:Double>
                    </Setter.Value>
                </Setter>
                <Setter Property="Background"
                        Value="{Binding Path=Tag,
                    RelativeSource={RelativeSource Self},
                    Converter={StaticResource ClickAnimationConverter}}" />
            </Style.Setters>
            <!--Styles.Resources-->
            <Style.Resources>
                <Storyboard x:Key="Click">
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                        <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </Style.Resources>
            <!--Styles.Triggers-->
            <Style.Triggers>
                <EventTrigger RoutedEvent="Click">
                    <BeginStoryboard Storyboard="{StaticResource Click}" />
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <!-- MainMenurBtn -->
        <Style x:Key="MainMenurBtn" TargetType="Button">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- H E A D E R   G R I D-->
        <Grid x:Name="HeaderMainGrid" Grid.Row="0">

            <Rectangle Fill="{Binding Source={StaticResource AppSettings}, Path=MainColor}" />

            <Canvas>
                <!--Header_BtnClose-->
                <Button x:Name="CloseButton" Width="35" Height="35" Canvas.Right="0"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>
                <!--Header_BtnMin-->
                <Button x:Name="MinimizeButton" Width="35" Height="35" Canvas.Right="35"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>
                <!--Header_BtnBack-->
                <Button x:Name="BackButton" Width="35" Height="35" Canvas.Left="0"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>

            </Canvas>
        </Grid>
        <!-- M A I N   G R I D-->
        <Grid x:Name="BodyMainGrid" Grid.Row="1">
            <!-- TAB CONTROL -->
            <TabControl x:Name="MainTabControl" BorderThickness="0">

                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                <!--Main Tab-->
                <TabItem x:Name="MainTab">
                    <!--Buttons Grid-->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80*"/>
                            <RowDefinition Height="96*"/>
                            <RowDefinition Height="79*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="91*"/>
                            <ColumnDefinition Width="110*"/>
                            <ColumnDefinition Width="91*"/>
                        </Grid.ColumnDefinitions>
                        <!--Btn1-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn1"
                                Grid.Column="0"  Grid.Row="0" Click="MainBtn1_OnClick"/>
                        <!--Btn2-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn2"
                                Grid.Column="1"  Grid.Row="0" Click="MainBtn1_OnClick"/>
                        <!--Btn3-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn3"
                                Grid.Column="2"  Grid.Row="0" Click="MainBtn1_OnClick"/>
                        <!--Btn4-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn4"
                                Grid.Column="0"  Grid.Row="1" Click="MainBtn1_OnClick"/>
                        <!--Btn5-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn5"
                                Grid.Column="1"  Grid.Row="1" Click="MainBtn1_OnClick"/>
                        <!--Btn6-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn6"
                                Grid.Column="2"  Grid.Row="1" Click="MainBtn1_OnClick"/>
                        <!--Btn7-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn7"
                                Grid.Column="0"  Grid.Row="2" Click="MainBtn1_OnClick"/>
                        <!--Btn8-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn8"
                                Grid.Column="1"  Grid.Row="2" Click="MainBtn1_OnClick"/>
                        <!--Btn9-->
                        <Button Style="{StaticResource MainMenurBtn}" Name="MainBtn9"
                                Grid.Column="2"  Grid.Row="2" Click="MainBtn1_OnClick"/>
                    </Grid>
                </TabItem>

                <TabItem x:Name="OptionsTab">

                </TabItem>


            </TabControl>
        </Grid>

    </Grid>
</Window>