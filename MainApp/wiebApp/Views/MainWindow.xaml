<controls:MetroWindow x:Class="wiebApp.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:sharedresources="clr-namespace:wiebApp.SharedResources"
                      xmlns:viewmodels="clr-namespace:wiebApp.ViewModels"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Height="300" Width="300"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanMinimize"
                      BorderBrush="Aqua">

    <Window.Resources>
        <sharedresources:AppSettings x:Key="AppSettings" />
        <viewmodels:DoubleToThickness x:Key="DoubleToThickness" />
    </Window.Resources>

    <controls:MetroWindow.BorderThickness>
        <Binding ElementName="BorderThicknessSlider" Path="Value" Converter="{StaticResource DoubleToThickness}" Mode="TwoWay"/>
    </controls:MetroWindow.BorderThickness>

    <Grid>

        <Grid x:Name="BodyMainGrid">
            <TabControl x:Name="TabControl" BorderThickness="0" IsTabStop="True">

                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="MainTab">
                    <StackPanel>
                        <ComboBox Height="40" SelectedIndex="0" 
                                      ItemsSource="{Binding Source={StaticResource AppSettings}, Path=AccentColors}" 
                                      IsSynchronizedWithCurrentItem="True"
                                      DisplayMemberPath="Name" />
                        <ComboBox Height="40" SelectedIndex="0" 
                                      ItemsSource="{Binding Source={StaticResource AppSettings}, Path=ThemeColors}" 
                                      IsSynchronizedWithCurrentItem="True"
                                      DisplayMemberPath="Name" />
                        <Slider x:Name="BorderThicknessSlider" />
                    </StackPanel>
                </TabItem>

                <TabItem x:Name="OptionsTab">

                </TabItem>


            </TabControl>
        </Grid>

    </Grid>
</controls:MetroWindow>