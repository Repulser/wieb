<Window x:Class="wieb.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wieb.Views"
        xmlns:sharedResources="clr-namespace:wieb.SharedResources"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:viewmodels="clr-namespace:wieb.ViewModels"
        mc:Ignorable="d"
        Height="300" Width="300"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <sharedResources:AppSettings x:Key="AppSettings" />
        <viewmodels:ClickAnimationConverter x:Key="ClickAnimationConverter" />

        <Style x:Key="HeaderButtons" TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Tag">
                    <Setter.Value>
                        <system:Double>-1</system:Double>
                    </Setter.Value>
                </Setter>
                <Setter Property="SolidColorBrush.Color"
                        Value="{Binding Path=Tag, RelativeSource={RelativeSource Self}, Converter={StaticResource ClickAnimationConverter}}" />
            </Style.Setters>

            <Style.Resources>
                <Storyboard x:Key="Click">
                    <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Tag">
                        <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                        <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1" />
                    </DoubleAnimationUsingKeyFrames>
                </Storyboard>
            </Style.Resources>

            <Style.Triggers>
                <EventTrigger RoutedEvent="Click">
                    <BeginStoryboard Storyboard="{StaticResource Click}" />
                </EventTrigger>
            </Style.Triggers>
        </Style>

      </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderMainGrid" Grid.Row="0">

            <Rectangle Fill="{Binding Source={StaticResource AppSettings}, Path=MainColor}" />

            <Canvas>

                <Button x:Name="CloseButton" Width="35" Height="35" Canvas.Right="0"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>

                <Button x:Name="MinimizeButton" Width="35" Height="35" Canvas.Right="35"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>

                <Button x:Name="BackButton" Width="35" Height="35" Canvas.Left="0"
                        Style="{StaticResource HeaderButtons}">
                    <Image Width="16" Height="16" />
                </Button>

            </Canvas>
        </Grid>

        <Grid x:Name="BodyMainGrid" Grid.Row="1">
            <TabControl x:Name="TabControl" BorderThickness="0">

                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <TabItem x:Name="MainTab">
                </TabItem>

                <TabItem x:Name="OptionsTab">
                </TabItem>


            </TabControl>
        </Grid>

    </Grid>
</Window>