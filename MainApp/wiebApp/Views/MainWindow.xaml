<controls:MetroWindow x:Class="wiebApp.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:sharedresources="clr-namespace:wiebApp.SharedResources"
                      xmlns:viewmodels="clr-namespace:wiebApp.ViewModels"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      mc:Ignorable="d"
                      Height="300" Width="300"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanMinimize"
                      BorderThickness="0"
                      Opacity="100"
                      Topmost="False">

    <Window.Resources>
        <sharedresources:AppSettings x:Key="AppSettings" />
        
        <viewmodels:DropShadowCheckBoxConverter x:Key="DropShadowConverter" />
        <viewmodels:DropGlowCheckBoxConverter x:Key="DropGlowConverter" />
        <viewmodels:CheckBoxAndLabelsEvents x:Key="CheckBoxEvents" />
        <viewmodels:ColorCraze x:Key="ColorCraze" /> 

        <!--S T Y L E S-->
        <!--MainMenuButtonStyles-->
        <Style  x:Key="MainBtns" TargetType="Button" >
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
        </Style>
    </Window.Resources>


    <controls:MetroWindow.NonActiveGlowBrush>
        <Binding ElementName="DropGlowCheck" Path="IsChecked" Converter="{StaticResource DropGlowConverter}" />
    </controls:MetroWindow.NonActiveGlowBrush>

    <controls:MetroWindow.GlowBrush>
        <Binding ElementName="DropShadowCheck" Path="IsChecked" Converter="{StaticResource DropShadowConverter}" 
                 Mode="TwoWay" />
    </controls:MetroWindow.GlowBrush>

    <controls:MetroWindow.EnableDWMDropShadow>
        <Binding ElementName="DropShadowCheck" Path="IsChecked" />
    </controls:MetroWindow.EnableDWMDropShadow>
    <!--M A I N   G R I D   O F   D O O M-->
    <Grid>
        <Grid x:Name="BodyMainGrid">
            <!--TabControl-->
            <TabControl x:Name="MainTabControl" BorderThickness="0" IsTabStop="True">
                <!--Tab Resources-->
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>
                
                <!--MAIN TAB-->
                <TabItem x:Name="MainTab">
                    <Grid>
                        <Button Style="{StaticResource MainBtns}" Click="MainBtn1_Click"/>
                    </Grid>
                </TabItem>

                <TabItem x:Name="OptionsTab">
                    <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="27*" />
                                <RowDefinition Height="61*" />
                            </Grid.RowDefinitions>
                        
                            <StackPanel Grid.Row="0">
                            <ComboBox Height="40" SelectedIndex="{Binding Source={StaticResource ColorCraze}, Path=IndexOfCombo}"
                                        ItemsSource="{Binding Source={StaticResource AppSettings}, Path=AccentColors}"
                                        IsSynchronizedWithCurrentItem="True"
                                        DisplayMemberPath="Name" 
                                        viewmodels:ColorCraze.IsColorCrazing="{Binding ElementName=ColorCrazeCheck, Path=IsChecked}" />
                            <ComboBox Height="40" SelectedIndex="0"
                                        ItemsSource="{Binding Source={StaticResource AppSettings}, Path=ThemeColors}"
                                        IsSynchronizedWithCurrentItem="True"
                                        DisplayMemberPath="Name" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="DropShadowCheck" />
                                <Label x:Name="DropShadowLabel" Content="DropShadow."  />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="DropGlowCheck" IsChecked="{Binding Source={StaticResource CheckBoxEvents}, Path=DropGlowIsChecked}" />
                                <Label x:Name="DropGlowLabel" Content="DropGlow while out of focus."
                                        MouseDoubleClick="DropGlowLabel_OnMouseDoubleClick" />
                            </StackPanel>
                            <CheckBox x:Name="ColorCrazeCheck" />
                        </StackPanel>
                    </Grid>
                        </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</controls:MetroWindow>