<controls:MetroWindow x:Class="wiebApp.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:converters="clr-namespace:wiebApp.Converters"
                      xmlns:sharedresources="clr-namespace:wiebApp.SharedResources"
                      xmlns:urban="clr-namespace:Dictionary.UrbanDictionaryPanel;assembly=Dictionary"
                      mc:Ignorable="d"
                      Height="300" Width="300"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanMinimize"
                      BorderThickness="0"
                      Opacity="{Binding ElementName=OpacitySlide, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                      Topmost="True">

    <Window.Resources>
        <sharedresources:AppSettings x:Key="AppSettings" />

        <converters:DropShadowCheckBoxConverter x:Key="DropShadowConverter" />
        <converters:DropGlowCheckBoxConverter x:Key="DropGlowConverter" />

        <Style  x:Key="MainBtns" TargetType="Button" >
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
        </Style>
    </Window.Resources>


    <controls:MetroWindow.NonActiveGlowBrush>
        <Binding ElementName="DropGlowCheck" Path="IsChecked" Converter="{StaticResource DropGlowConverter}" />
    </controls:MetroWindow.NonActiveGlowBrush>

    <controls:MetroWindow.GlowBrush>
        <Binding ElementName="DropShadowCheck" Path="IsChecked" Converter="{StaticResource DropShadowConverter}" 
                 Mode="TwoWay" />
    </controls:MetroWindow.GlowBrush>

    <controls:MetroWindow.EnableDWMDropShadow>
        <Binding ElementName="DropShadowCheck" Path="IsChecked" />
    </controls:MetroWindow.EnableDWMDropShadow>

    <Grid>
        <Grid x:Name="BodyMainGrid">
            
            <controls:MetroTabControl x:Name="MainTabControl" BorderThickness="0" IsTabStop="True">
                <controls:MetroTabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem" />
                            </Setter.Value>
                        </Setter>
                    </Style>
                </controls:MetroTabControl.Resources>
                <controls:MetroTabItem x:Name="MainTab" Header="Home">
                    <Grid>
                        <Button Style="{StaticResource MainBtns}" Click="MainBtn1_Click" Content="Theme"/>
                    </Grid>
                </controls:MetroTabItem>
                <controls:MetroTabItem x:Name="OptionsTab" Header="Settings">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="27*" />
                            <RowDefinition Height="61*" />
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <ComboBox Height="40"
                                      ItemsSource="{Binding Source={StaticResource AppSettings}, Path=AccentColors}"
                                      IsSynchronizedWithCurrentItem="True"
                                      DisplayMemberPath="Name" />
                            <ComboBox Height="40" SelectedIndex="0"
                                      ItemsSource="{Binding Source={StaticResource AppSettings}, Path=ThemeColors}"
                                      IsSynchronizedWithCurrentItem="True"
                                      DisplayMemberPath="Name" />
                        </StackPanel>
                        <StackPanel Grid.Row="1">
                            <CheckBox x:Name="DropShadowCheck" IsChecked="True" 
                                        Content="DropShadow" />
                            <CheckBox x:Name="DropGlowCheck" IsChecked="True"
                                        Content="DropGlow while window loses focus." />
                            <CheckBox x:Name="TopMostCheck" IsChecked="false"
                                        Content="Enable TopMost mode." />
                            <Slider x:Name="OpacitySlide" Maximum="100" Minimum="50" />
                        </StackPanel>
                    </Grid>
                </controls:MetroTabItem>
                <controls:MetroTabItem Header="Urban">
                    <urban:UrbanDictionaryPanel/>
                </controls:MetroTabItem>
            </controls:MetroTabControl>
        </Grid>
    </Grid>
</controls:MetroWindow>